<html>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <style>
        table,.font {font-size: 13px;}
        th {text-align: center;}
        .currency {float:right;}
    </style>
</head>
<body>
    <div class="m-4">
        <div class="m-5 font">
            <div class="row">
                <div class="col-4">
                    <img src="http://localhost:5000/images/logo.jpg" style="max-width: 100px" />
                </div>
                <div class="col-8">
                    <h1>Student Attendance</h1>
                </div>
            </div>
        </div>
        <div>
            <div class="row">
                <div class="col-8">
                    <table style="border: 1px solid black;" class="table table-bordered table-sm det">
                        <tbody>
                            <tr>
                                <td width="20%">Class</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td width="20%">Date</td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                    <table style="border: 1px solid black;" class="table table-bordered table-sm det">
                        <tbody>
                        <tr>
                            <th width="20%">Student Name</th>
                            <th width="20%">Status</th>
                            <th width="20%">Note</th>
                        </tr>
                        {{#each stuAttendanceData}}
                        <tr>
                            <td>{{dataValues.student.dataValues.first_name}}</td>
                            <td>{{dataValues.status}}</td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </br>
    </div>
</body>
</html>
